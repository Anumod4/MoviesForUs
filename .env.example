# Aiven PostgreSQL Configuration
AIVEN_DB_HOST=your_aiven_host.aivencloud.com
AIVEN_DB_PORT=your_port_number
AIVEN_DB_NAME=defaultdb
AIVEN_DB_USER=your_username
AIVEN_DB_PASSWORD=your_secure_password
DATABASE_URL=postgresql://username:password@host:port/defaultdb?sslmode=require

# Flask Configuration
SECRET_KEY=generate_a_long_random_hex_key_using_python_secrets_module
FLASK_ENV=production
FLASK_DEBUG=0

# SSL Certificate Path (if required)
AIVEN_SSL_CERT_PATH=/path/to/ca.pem
