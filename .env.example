# Aiven PostgreSQL Configuration
AIVEN_DB_HOST=your-project-xxxxx.aivencloud.com
AIVEN_DB_PORT=12345
AIVEN_DB_NAME=defaultdb
AIVEN_DB_USER=avnadmin
AIVEN_DB_PASSWORD=your_secure_password
DATABASE_URL=postgresql://avnadmin:your_secure_password@your-project-xxxxx.aivencloud.com:12345/defaultdb?sslmode=require

# SSL Certificate Path (if required)
AIVEN_SSL_CERT_PATH=/path/to/ca.pem

# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=production
FLASK_DEBUG=0
